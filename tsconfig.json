{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2015",
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*", "03-evolution-ts/src/types/*"]
    },
    "declaration": false
  },
  "include": [
    "03-evolution-ts/src/**/*",
    "04-evolution-lit/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "03-evolution-ts/src/**/*.spec.ts",
    "03-evolution-ts/dist/**/*.*",
    "04-evolution-lit/src/**/*.spec.ts",
    "04-evolution-lit/dist/**/*.*"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": "./src/**/*.spec.ts"
  }
}
